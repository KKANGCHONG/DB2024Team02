package DB2024Team02;

import javax.swing.*;
import java.awt.*;

public class MainPage extends JFrame {

    public MainPage() {
        setTitle("DB2024Team02 MainPage");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        Container contentPane = getContentPane();
        contentPane.setBackground(Color.WHITE); // 흰색 배경 설정
        contentPane.setLayout(new BorderLayout());

        // 상단 패널 생성
        JPanel jpanel1 = new JPanel();
        jpanel1.setBackground(Color.WHITE);
        jpanel1.setLayout(new FlowLayout());

        // 아이콘 추가
        ImageIcon originalIcon = new ImageIcon("C:\\Users\\leehy\\OneDrive\\바탕 화면\\free-icon-hospital-3304592.png");
        Image img = originalIcon.getImage();
        Image scaledImg = img.getScaledInstance(40, 40, Image.SCALE_SMOOTH); // 크기 설정
        ImageIcon scaledIcon = new ImageIcon(scaledImg);
        JLabel HospitalImage = new JLabel(scaledIcon);
        
        // 제목 추가
        JLabel systemName = new JLabel("비상 대응 인력 관리 프로그램");
        systemName.setFont(new Font("Arial", Font.BOLD, 27));
        systemName.setForeground(Color.black);

        // 아이콘과 제목 패널에 붙이기
        jpanel1.add(HospitalImage);
        jpanel1.add(systemName);

        // 버튼 패널 생성
        JPanel jpanel2 = new JPanel();
        jpanel2.setBackground(Color.WHITE);
        jpanel2.setLayout(new GridBagLayout());
        GridBagConstraints gbc = new GridBagConstraints();
        gbc.insets = new Insets(10, 10, 10, 10);
        gbc.fill = GridBagConstraints.HORIZONTAL;

        // 의사 개인정보 버튼
        JButton doctorButton = new JButton("의사 정보");
        doctorButton.setBackground(new Color(230, 230, 230));
        gbc.gridx = 0;
        gbc.gridy = 0;
        jpanel2.add(doctorButton, gbc);

        // 간호사 개인정보 버튼
        JButton nurseButton = new JButton("간호사 정보");
        nurseButton.setBackground(new Color(230, 230, 230));
        gbc.gridx = 1;
        gbc.gridy = 0;
        jpanel2.add(nurseButton, gbc);

        // Patient Info 버튼
        JButton patientButton = new JButton("환자 정보");
        patientButton.setBackground(new Color(230, 230, 230));
        gbc.gridx = 0;
        gbc.gridy = 1;
        jpanel2.add(patientButton, gbc);

        // Medical Info 버튼
        JButton medicalInfoButton = new JButton("치료 / 약물 정보");
        medicalInfoButton.setBackground(new Color(230, 230, 230));
        gbc.gridx = 1;
        gbc.gridy = 1;
        jpanel2.add(medicalInfoButton, gbc);

        // 비상 인력 버튼
        JButton emergencyButton = new JButton("긴급 대응 인력");
        emergencyButton.setBackground(new Color(230, 230, 230));
        gbc.gridx = 0;
        gbc.gridy = 2;
        jpanel2.add(emergencyButton, gbc);

        // My Page 버튼
        JButton myPageButton = new JButton("마이 페이지");
        myPageButton.setBackground(new Color(230, 230, 230));
        gbc.gridx = 1;
        gbc.gridy = 2;
        jpanel2.add(myPageButton, gbc);

        // 컨텐트팬에 패널 붙이기
        contentPane.add(jpanel1, BorderLayout.NORTH);
        contentPane.add(jpanel2, BorderLayout.CENTER);

        setSize(800, 450);
        setVisible(true);
    }

    public static void main(String[] args) {
        MainPage mainPage = new MainPage();
    }
}
